{
  "manifest_version": 2,

  "name": "Subsonic++",
  "description": "Subsonic++ is a Chrome extension to extend subsonic server in desktop",
  "version": "1.0",
  "author": "Xavier Boubert http://xavierboubert.fr",

  "icons": {
    "16": "assets/images/icon.png",
    "48": "assets/images/icon.png",
    "128": "assets/images/icon.png"
  },
  "permissions": [
    "tabs", "http://*/", "https://*/"
  ],
  "browser_action": {
    "default_title": "Subsonic++",
    "default_icon": "assets/images/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/app.js"],
    "persistent": false
  },

  "commands": {
    /*"toggle-pin": {
      "suggested_key": { "default": "Ctrl+Shift+Y" },
      "description": "Toggle tab pin"
    },*/
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}